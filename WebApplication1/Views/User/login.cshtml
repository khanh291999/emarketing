@model WebApplication1.Models.tbl_user

@{
    Layout = null;
}


<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        /*height: 900px;
        background-image: url('../../Content/img/building2.jpg');
        background-size: 100% 900px;*/
        margin: 0;
        height: 100vh;
        width: 100vw;
        overflow:hidden;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;
        background-image: url("../../Content/img/sea.jpg");
        background-size: cover;
    }

        .background .water {
            position: absolute;
            background-image: url("../../Content/img/sea-map.png");
            background-size: cover;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            filter: url("#turbulence");
        }



    .insidebox {
        /*border: 1px solid black;*/
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 50px 50px 50px 50px;
        background-color: rgba(128, 135, 125,0.5);
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">

    <div class="background">
        <div class="water"></div>
    </div>

    <svg>
        <filter id="turbulence" x="0" y="0" width="100%" height="100%">
            <feTurbulence id="sea-filter" numOctaves="3" seed="2" baseFrequency="0.02 0.05"></feTurbulence>
            <feDisplacementMap scale="20" in="SourceGraphic"></feDisplacementMap>
            <animate xlink:href="#sea-filter" attributeName="baseFrequency" dur="60s"
                     keyTimes="0;0.5;1" values="0.02 0.06;0.04 0.08;0.02 0.06" repeatCount="indefinite" />
        </filter>
    </svg>


    <div id="box" class="img-responsive">
        @using (@Html.BeginForm())
        {
        <div class="insidebox">
            <div class="input-group" style="margin: 0 auto">
                <div> <h1 style="color:white; font-weight:bold;font-size:50px">Member Login</h1></div>
            </div>




                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.u_email) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                        @*<asp:TextBox ID="txtpassword" runat="server" class="form-control" placeholder="Password" TextMode="Password" required="required"></asp:TextBox>*@
                        @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Password" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.u_password) </span>
                </div>




                <div class="form-group">
                    <div class="input-group" style="margin: 0 auto;margin-top:40px">
                        @*<asp:Button ID="Button1" runat="server" Text="Log In" class="form-control  btn-success" OnClick="Button1_Click" OnClientClick="retrun(passwordmatchfunc())" />*@
                        <input type="submit" value="Login" class="btn btn-danger btn-block" />
                    </div>
                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>

            }
        </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
