@model WebApplication1.Models.tbl_rate
@{
    /**/
    Layout = null;
}
<style>

    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        margin: 0;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        height: 900px;
        background-image: url('../../Content/img/nen6.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
        /* border-radius: 50px 50px 50px 50px;
        background-color: rgba(128, 135, 125,0.5);*/
    }

    div h1 {
        text-align: center;
        position: relative;
        top: 70px;
        left: 10px;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("Createrate",
                        "User",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div class="input-group" style="margin: 0 inherit;margin-bottom:80px">
                    <div> <h1 style="color:white; font-weight:bold;font-size:50px">Post A Rate</h1></div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-search"></span></div>
                        @Html.DropDownListFor(x => x.rate_fk_pro, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                    </div>
                    @*<span style="color:red">   @Html.ValidationMessageFor(x => x.rate_fk_product) </span>*@
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-shopping-cart"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.rate_content, new { @class = "form-control", @placeholder = "Product Name" })
                    </div>
                    @*<span style="color:red">   @Html.ValidationMessageFor(x => x.comment_content) </span>*@
                </div>



                <div class="form-group">
                    <div class="input-group" style="margin: 0 auto;margin-top:40px">
                        <input type="submit" value="Add" class="btn btn-danger btn-block" />
                    </div>
                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>


            </div>

        }
    </div>
</div>

<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
