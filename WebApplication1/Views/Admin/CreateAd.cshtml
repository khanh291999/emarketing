@model WebApplication1.Models.tbl_product
@{
    /**/
    Layout = null;
}

<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 100vh;
        width: 100vw;
        background-image: linear-gradient( 45deg, rgba(2, 33, 64, 0.8) 55%, rgba(45, 95, 93, 0.85) ),url('../../Content/img/background1.jpg');
        overflow: hidden;
    }

    .insidebox {
        margin: 15% auto 10% auto;
        max-width: 500px;
        min-width: 150px;
        padding-left: 60px;
        padding-right: 60px;
         border-radius: 50px 50px 50px 50px;
        /*background-color: rgba(128, 135, 125,0.5);*/
    }

   .center  {
        text-align: center;
        margin-bottom:20px;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("CreateAd",
                        "Admin",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">

              
                    <div class="center"> <h1 style="color:white; font-weight:bold;font-size:50px">Post new product</h1></div>
               

                <div class="form-group">
                    <div class="input-group">


                        <div class="input-group-addon"><span class="glyphicon glyphicon-search"></span></div>
                        @Html.DropDownListFor(x => x.pro_fk_cat, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_fk_cat) </span>

                </div>



                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-shopping-cart"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.pro_name, new { @class = "form-control", @placeholder = "Product Name" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_name) </span>

                </div>



                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.pro_price, new { @class = "form-control", @placeholder = "Price" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_price) </span>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-comment"></span></div>
                        @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                        @Html.TextBoxFor(x => x.pro_des, new { @class = "form-control", @placeholder = "Description" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.pro_des) </span>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></div>

                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />



                    </div>


                </div>


                <div class="form-group">
                    <div class="input-group" style="margin: 0 auto;margin-top:40px">
                        <input type="submit" value="Add" class="btn btn-success btn-block" />
                    </div>
                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>

        }
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
